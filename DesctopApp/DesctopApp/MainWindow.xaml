<Window x:Class="DesctopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesctopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="#FFFEFAFA"
          x:Name="MainPage">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="FirstCol" Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#FFFEFAFA"
              Width="800"
              Height="550"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              x:Name="WorkArea" 
               Grid.Column="1">
            <ContentControl x:Name="DataContent"/>
        </Grid>

        <Grid x:Name="sidePanel"
              Background="#FF0F4E7A"
              HorizontalAlignment="Left"
              Width="160"
              Grid.Column="0">
            <StackPanel>
                <Grid Height="50"
                      Background="#FF0F4E7A">

                    <Label HorizontalAlignment="Left"
                           Width="35"
                           Height="40"
                           VerticalAlignment="Top"
                           BorderBrush="Transparent"
                           Margin="10,10,0,0"
                           MouseLeftButtonDown="Label_MouseLeftButtonDown">
                        <Label.Background>
                            <ImageBrush ImageSource="D:\\WorkProjects\\C#\\MyVPN\\DesctopApp\\DesctopApp\\icons\\menu.png"/>
                        </Label.Background>
                    </Label>
                </Grid>
                <Grid Height="60"
                      Margin="0,30,0,0"
                      Background="Transparent"
                      MouseDown="homeEvent"
                      >
                    <StackPanel Orientation="Horizontal">
                        <Label Height="30"
                           Width="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="11,16,0,0"
                           BorderBrush="Transparent">
                            <Label.Background>
                                <ImageBrush ImageSource="D:\\WorkProjects\\C#\\MyVPN\\DesctopApp\\DesctopApp\\icons\\home.png"/>
                            </Label.Background>
                        </Label>
                        <Label Height="40"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Content="Home"
                           FontSize="25"
                           Margin="28,0,0,0"
                           Foreground="#FFFFFF"
                           VerticalContentAlignment="Top"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
